<div class="glossary-container">
    <aside class="glossary-nav">
        <h3>Quick Navigation</h3>
        <ul>
            {% for topicGroup in glossaryByTopic %}
            <li>
                <a href="#{{ topicGroup.id }}">{{ topicGroup.name.en }}</a>
                <ul>
                    {% for term in topicGroup.terms %}
                    <li><a href="#{{ term.id }}">{{ term.en }}</a></li>
                    {% endfor %}
                </ul>
            </li>
            {% endfor %}
        </ul>
    </aside>
    
    <div class="glossary-main">
        <h1>Glossary</h1>
        <p>Click on terms to view detailed definitions and explanations</p>

        <div class="glossary-search">
            <input type="text" id="glossarySearch" placeholder="Search terms..." style="width: 100%; padding: 0.75rem 1rem; font-size: 1rem; border: 2px solid #ddd; border-radius: 8px; margin-bottom: 2rem; box-sizing: border-box;">
        </div>

        <div id="glossaryContent">
        {% for topicGroup in glossaryByTopic %}
            <div class="glossary-topic" data-topic="{{ topicGroup.id }}">
                <h2 id="{{ topicGroup.id }}">{{ topicGroup.name.en }}</h2>
                <div class="glossary-terms">
                    {% for term in topicGroup.terms %}
                    <div class="glossary-term" id="{{ term.id }}" data-en="{{ term.en | lower }}" data-zh="{{ term.zh }}">
                        <div class="term-header">
                            <span class="term-name">{{ term.en }}</span>
                        </div>
                        <div class="term-description">
                            <p>{{ term.description.en }}</p>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('glossarySearch');
    const terms = document.querySelectorAll('.glossary-term');
    const topics = document.querySelectorAll('.glossary-topic');
    
    // Handle hash navigation
    if (window.location.hash) {
        const termId = window.location.hash.substring(1);
        const termElement = document.getElementById(termId);
        if (termElement) {
            termElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
            termElement.style.backgroundColor = '#fff3cd';
            setTimeout(() => {
                termElement.style.transition = 'background-color 1s';
                termElement.style.backgroundColor = '';
            }, 2000);
        }
    }
    
    searchInput.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase().trim();
        
        if (!searchTerm) {
            terms.forEach(term => term.style.display = 'block');
            topics.forEach(topic => topic.style.display = 'block');
            return;
        }
        
        topics.forEach(topic => {
            let topicHasResults = false;
            const topicTerms = topic.querySelectorAll('.glossary-term');
            
            topicTerms.forEach(term => {
                const en = term.dataset.en || '';
                const zh = term.dataset.zh || '';
                
                if (en.includes(searchTerm) || zh.includes(searchTerm)) {
                    term.style.display = 'block';
                    topicHasResults = true;
                } else {
                    term.style.display = 'none';
                }
            });
            
            topic.style.display = topicHasResults ? 'block' : 'none';
        });
    });
});
</script>

